ul,
ol
  padding 0
  margin 0
  list-style-position inside

ul
  list-style-type disc

li
  > ul,
  > ol
    margin-left 15px

b,
strong,
  font-weight bold

i,
em,
  font-style italic

ins
  text-decoration none

del
  text-decoration line-through

input,
button
  border-radius 0

img
  max-width 100%
  border none

a,
button
  outline none

button
  border none
  padding 6px 8px
  font-size 1.2em
  background transparent

p
  margin 30px 0

sub,
sup
  bottom 0
  line-height 18px
